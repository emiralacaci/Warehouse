<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Depo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="Base.Theme.Custom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="CustomBottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <!-- BottomAppBar için özel stil ayarlarını burada belirleyin -->
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="CustomFloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <!-- FloatingActionButton için özel stil ayarlarını burada belirleyin -->
        <item name="android:background">@drawable/add_new_material_bg</item>
        <item name="backgroundTint">@color/white</item>
        <item name="tint">@color/comment_text_for_inventory_items</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/custom_dialog_bg_shape</item>
    </style>
    <style name="CreamFragmentStatusBarTheme" >
        <item name="android:statusBarColor">@color/cream_material_secondary</item>
    </style>


    <style name="Theme.Depo" parent="Base.Theme.Depo" />
</resources>