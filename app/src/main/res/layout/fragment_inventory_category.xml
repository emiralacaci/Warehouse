<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/go_to_tea_materials_page"
            android:orientation="horizontal"
            android:clickable="true"
            android:onClick="goToTeaMaterialsPage"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/tea_materials_page_button_background"
            android:elevation="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:src="@drawable/pic_tea"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Çay Kutuları, Çay Kolileri, Çay Ham Maddeleri, Paketlenmiş Çay Miktarı"
                android:textColor="@color/comment_text_for_inventory_items"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/go_to_paste_materials_page"
            android:orientation="horizontal"
            android:clickable="true"
            android:onClick="goToPasteMaterialsPage"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/paste_materials_page_button_background"
            android:elevation="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:src="@drawable/pic_paste"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Macun Kutuları, Macun Kolileri, Macun Köpükleri, Macun Ham Maddeleri, Paketlenmiş Macun Miktarı"
                android:textColor="@color/comment_text_for_inventory_items"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/go_to_cream_materials_page"
            android:orientation="horizontal"
            android:clickable="true"
            android:onClick="goToCreamMaterialsPage"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/cream_materials_page_button_background"
            android:elevation="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="15dp">
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:src="@drawable/pic_cream"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Krem Kutuları, Krem  Kolileri, Krem Ham Maddeleri, Paketlenmiş Krem Miktarı"
                android:textColor="@color/comment_text_for_inventory_items"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/go_to_syrup_materials_page"
            android:orientation="horizontal"
            android:clickable="true"
            android:onClick="goToSyrupMaterialsPage"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/syrup_material_page_button_background"
            android:elevation="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="15dp">
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:src="@drawable/pic_syrup"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Şurup Kutuları, Şurup Kolileri, Şurup Ham Maddeleri, Paketlenmiş Şurup Miktarı"
                android:textColor="@color/comment_text_for_inventory_items"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="10dp"/>
    </LinearLayout>
</ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>