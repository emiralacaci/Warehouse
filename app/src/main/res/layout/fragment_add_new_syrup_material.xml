<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/syrup_material_tertiary">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back_button"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:drawableStart="@drawable/baseline_arrow_back"
            android:paddingStart="30dp"
            android:background="@drawable/back_button_bg"
            android:backgroundTint="@color/syrup_material_primary"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Yeni Krem Malzemesi"
            android:textSize="20sp"
            android:fontFamily="@font/lemon"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:paddingHorizontal="20dp"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ürün Adı"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="35dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:id="@+id/material_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:elevation="2dp"
                android:background="@drawable/add_new_cream_edit_text_bg"
                android:textSize="20sp"
                android:singleLine="true"
                android:maxLength="20"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barkod Numarası"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <EditText
                    android:id="@+id/specific_code"
                    android:layout_width="0dp"
                    android:layout_weight="3.95"
                    android:layout_height="50dp"
                    android:elevation="2dp"
                    android:background="@drawable/add_new_cream_edit_text_bg"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:layout_marginTop="3dp"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.08"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/qr_scanner"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="QR OKUT"
                    android:textStyle="bold"
                    android:background="@drawable/add_new_cream_edit_text_bg"
                    android:backgroundTint="@color/syrup_material_primary"
                    android:layout_weight="0.97"/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Açıklama"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:id="@+id/explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:firstBaselineToTopHeight="30dp"
                android:lastBaselineToBottomHeight="20dp"
                android:background="@drawable/add_new_cream_edit_text_bg"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adet"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:id="@+id/number_of_pieces"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:elevation="2dp"
                android:background="@drawable/add_new_cream_edit_text_bg"
                android:textSize="20sp"
                android:inputType="number"
                android:singleLine="true"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Son Kullanma Tarihi"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:clickable="true"
                android:id="@+id/expiration_date"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:elevation="2dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:textAlignment="center"
                android:gravity="center"
                android:inputType="datetime"
                android:background="@drawable/add_new_cream_edit_text_bg"
                android:paddingHorizontal="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="3dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/save"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:text="KAYDET"
                android:elevation="5dp"
                android:textSize="25sp"
                android:background="@drawable/save_button"
                android:backgroundTint="@color/syrup_material_primary"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="10dp"/>




        </LinearLayout>
    </ScrollView>


</LinearLayout>